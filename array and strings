//    dono same hai------------>

	typedef struct account{
	 int id;
	 string name;
	 float amount;
} acc;
int main(){

    acc saving;
	saving.amount = 120000;
	saving.id =12;
	saving.name = "shivi"; 
	cout<<saving.amount<<endl;
	cout<<saving.id<<endl;
	cout<<saving.name;
	return 0;
}
  
	
