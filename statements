#include<iostream>
using namespace std;
int main()
{
	int age;
	cout<<"Tell me your age: "<<endl;
	cin>>age;
	/*
	if-else case**************************************
	if(age<18){
		cout<<"sorry!! you are not allowed"<<endl;
	}
	else if(age==18)
	{
		cout<<"pass required"<<endl;
	}
	else
	{
		cout<<"you are welcome to the party.."<<endl;
	}*/
	
//	switch case***********************************

    switch(age)
	{
     case 18:
	    cout<<"you are 18"<<endl	;
	    break;
	 case 22:
	 	cout<<"you are 22"<<endl;
	 	break;
	 default:
	 cout<<"no special case"<<endl;
	 break;
	 	
	 	
	}

	return 0;
}
